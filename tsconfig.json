{
  "compilerOptions": {
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "moduleResolution": "node",
    "noEmit": true,
    "module": "commonjs",
    "target": "es2015",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"] // resolve all modules prefixed with `@/` from `src` directory
    },
    "outDir": "./dist",
  },
  "include": [
    "src",
    "e2e"
  ],
  "exclude": [
    "components",
    "node_modules",
    "e2e/fixtures"
  ]
}